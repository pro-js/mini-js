<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Crawling</title>

  <!--- CSS --> 
  <link 
    rel="stylesheet" 
    href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
  >
  <link 
    rel="stylesheet"
    href="https://fonts.googleapis.com/icon?family=Material+Icons" 
  >
  <link rel="stylesheet" href="./../css/style.css">
</head>
<body>
  
  <div class="row">
    <div class="col s12 m6 offset-l3">
      <div class="card center-align hoverable waves-light lighten-1">
        <div class="card-content black-text">
          <input 
            type="text" 
            placeholder="eg. https://github.com/jinnatul/"
            name="baseURL" 
            id="baseURL"
          >
          <input 
            class="btn" 
            type="button" 
            value="Search"
            id="crawlingBtn"
          >
        </div>
      </div>
    </div>
  </div>
  <br>
  <div id="preLoader"></div>

  <!--- View -->
  <main>
    <div class="row">
      <div id="crawlingId"></div>
    </div>
  </main>

  <!--- JS -->
  <script 
    src="https://code.jquery.com/jquery-3.5.1.min.js">
  </script>
  <script 
    src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js">
  </script>
  <script>
    $(function(){
      $("#crawlingBtn").click(function() {
        $("main").hide();
        let baseURL = $("#baseURL").val();
        let apiURL = "https://mini-js.herokuapp.com/mini/api/crawling-img?baseURL=" 
          + baseURL;
        callLoader();
        $.get(apiURL, function() {})
          .done((res) => {
            $("main").show();
            $("#preLoader").hide();
            res = res.data;
            let str = "";
            for (let i = res.length - 1; i >= 0; i--) {
              str += "<div class='col s12 m3'>";
              str += "<div class='card center-align hoverable waves-light lighten-1'>";
              str += "<div class='card-content'>";
              str += "<img class='responsive-img'"
              str += "src=" + res[i] + " alt=''>"
              str += "</div></div></div>";
            }
            $("#crawlingId").html(str);
            if (res === undefined || res === null || res.length === 0) {
              showToast("Nothing found!", "green darken-3");
            }
            $("#baseURL").val("");
          })
          .fail(() => {
            showToast("Somthing wrong", "red darken-3");
          })
      })
    })
    function callLoader() {
      $("#preLoader").show();
      let str = "<div class='circle-loader'>";
        str += "<div class='loader-container'>";
        str += "<div class='ball'></div>";
        str += "<div class='ball'></div>";
        str += "<div class='ball'></div>";
        str += "<div class='ball'></div></div></div>";
      $("#preLoader").html(str);
    }

    /*** Show Toast ***/
    function showToast(data, style) {
      M.toast({
          html : data,
          classes : style
      });
    }
  </script>
</body>
</html>